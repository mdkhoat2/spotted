<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator." parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/half_grey</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="RoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.RoundedFilled
        </item>
        <item name="boxBackgroundColor">@android:color/transparent</item> <!-- No background color -->
        <item name="boxStrokeColor">@drawable/selector_text_input_layout_white</item> <!-- White outline color -->
        <item name="android:textColor">@color/white</item> <!-- White text color -->
        <item name="android:textColorHint">@color/white</item> <!-- White hint text color -->
        <item name="endIconTint">@drawable/selector_text_input_layout_icon</item> <!-- White end icon color -->"
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.RoundedFilled" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>