<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".ui.account.AccountFragment">

    <TextView
        android:id="@+id/fragmentAccount_textView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:elevation="16dp"
        android:gravity="center_horizontal"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:shadowColor="#000000"
        android:text="@string/title_account"
        android:fontFamily="@font/instance"
        android:textColor="@color/blue_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentAccount_appCompatButton_editProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_blue_dark"
        android:drawableEnd="@drawable/icon_right_white"
        android:fontFamily="@font/instance"
        android:gravity="start|center"
        android:paddingStart="30dp"
        android:paddingEnd="24dp"
        android:stateListAnimator="@null"
        android:text="Edit profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentAccount_textView_header" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentAccount_appCompatButton_changePassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_blue_dark"
        android:gravity="start|center"
        android:paddingStart="30dp"
        android:text="Change password"
        android:fontFamily="@font/instance"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/icon_right_white"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentAccount_appCompatButton_editProfile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentAccount_appCompatButton_logOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_red"
        android:gravity="start|center"
        android:paddingStart="30dp"
        android:text="Log out"
        android:fontFamily="@font/instance"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="@color/red_700"
        android:drawableEnd="@drawable/icon_logout"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentAccount_appCompatButton_changePassword" />

    


</androidx.constraintlayout.widget.ConstraintLayout>