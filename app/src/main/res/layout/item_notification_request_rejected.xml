<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notificationItem_accepted_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_green_white"
        android:backgroundTint="@color/red_700"
        android:fontFamily="@font/instance"
        android:paddingStart="60dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="Your request to join ADL League has been accepted."
        android:textColor="@color/green_700"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notificationItem_accepted_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationItem_accepted_textView"
        app:layout_constraintStart_toStartOf="@+id/notificationItem_accepted_textView"
        app:layout_constraintTop_toTopOf="@+id/notificationItem_accepted_textView"
        app:srcCompat="@drawable/icon_verified" />

</androidx.constraintlayout.widget.ConstraintLayout>