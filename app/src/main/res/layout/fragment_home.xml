<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/fragmentHome_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:elevation="16dp"
        android:gravity="center"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleX="10"
        android:elevation="4dp"
        android:src="@drawable/background_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-4dp"
        android:elevation="8dp"
        android:scaleX="10"
        android:src="@drawable/background_reversed_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:clickable="true"
        android:id="@+id/fragmentHome_background_upcoming"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:elevation="10dp"
        android:src="@drawable/rounded_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHome_header" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentHome_button_openMap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_blue_dark"
        android:gravity="start|center"
        android:paddingStart="30dp"
        android:text="Open map"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHome_background_upcoming" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentHome_button_messages"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_blue_dark"
        android:gravity="start|center"
        android:paddingStart="30dp"
        android:text="Messages"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHome_button_openMap" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:src="@drawable/icon_right_white"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentHome_button_openMap"
        app:layout_constraintEnd_toEndOf="@+id/fragmentHome_button_openMap"
        app:layout_constraintTop_toTopOf="@+id/fragmentHome_button_openMap" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:src="@drawable/icon_right_white"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentHome_button_messages"
        app:layout_constraintEnd_toEndOf="@+id/fragmentHome_button_messages"
        app:layout_constraintTop_toTopOf="@+id/fragmentHome_button_messages" />

    <TextView
        android:id="@+id/fragmentHome_textView_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:elevation="10dp"
        android:text="Upcoming"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/fragmentHome_background_upcoming"
        app:layout_constraintTop_toTopOf="@+id/fragmentHome_background_upcoming" />

    <TextView
        android:id="@+id/fragmentHome_textView_upcoming_eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:text="No Up Coming Event  :("
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/fragmentHome_background_upcoming"
        app:layout_constraintTop_toTopOf="@+id/fragmentHome_background_upcoming" />

    <TextView
        android:id="@+id/fragmentHome_textView_upcoming_eventCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:elevation="10dp"
        android:text=""
        android:textColor="@color/blue_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragmentHome_background_upcoming"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHome_textView_upcoming_eventTitle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/icon_location_white"
        app:layout_constraintStart_toStartOf="@+id/fragmentHome_background_upcoming"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHome_textView_upcoming_eventCategory" />

    <TextView
        android:id="@+id/fragmentHome_textView_upcoming_eventLocation"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:text="..."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:elevation="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/icon_time_white"
        app:layout_constraintStart_toStartOf="@+id/fragmentHome_background_upcoming"
        app:layout_constraintTop_toBottomOf="@id/imageView5" />

    <TextView
        android:id="@+id/fragmentHome_textView_upcoming_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:text="..."
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>