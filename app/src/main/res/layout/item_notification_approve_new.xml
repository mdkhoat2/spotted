<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notificationItem_approve_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue_300"
        android:fontFamily="@font/instance"
        android:paddingStart="60dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="12dp"
        android:text="A new request to join PR league is waiting for your approval."
        android:textColor="@color/blue_700"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notificationItem_approve_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationItem_approve_textView"
        app:layout_constraintStart_toStartOf="@+id/notificationItem_approve_textView"
        app:layout_constraintTop_toTopOf="@+id/notificationItem_approve_textView"
        app:srcCompat="@drawable/icon_add_person_blue" />

    <ImageView
        android:id="@+id/notificationItem_approve_more_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationItem_approve_textView"
        app:layout_constraintEnd_toEndOf="@+id/notificationItem_approve_textView"
        app:layout_constraintTop_toTopOf="@+id/notificationItem_approve_textView"
        app:srcCompat="@drawable/icon_right_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>